package com.mtbs.appointments.service;

import com.mtbs.appointments.dto.CreateAppointmentRequest;
import com.mtbs.appointments.model.Appointment;

import java.util.List;
import java.util.Optional;
import java.util.UUID;

public interface AppointmentsService {

    Appointment createAppointment(CreateAppointmentRequest request);

    List<Appointment> getAllAppointments();

    Optional<Appointment> getAppointmentById(UUID id);

    Booking updateAppointment(UUID id, Booking updatedBooking);

    boolean deleteBooking(UUID id);
}
